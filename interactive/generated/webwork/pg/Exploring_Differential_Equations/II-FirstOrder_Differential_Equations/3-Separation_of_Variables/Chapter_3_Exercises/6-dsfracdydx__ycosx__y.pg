Context()->variables->add(y => 'Real');
Context()->variables->add(c => 'Real');
$order = 1;
$f = Formula("1+cos(x)");
$g = Formula("y");
$g_inv = Formula("1/y");
$F = Formula("x+sin(x)");
$G = Formula("ln|y|");
$y_gen = Formula("c*e^(x+sin(x))");

