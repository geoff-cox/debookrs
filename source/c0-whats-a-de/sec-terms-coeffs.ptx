								<m>\ +\ </m>
							<area correct="yes"><m>t^2</m>	</area>
							<area correct="no">	<m>y^2</m>	</area>
								<m>\ -\ </m>
							<area correct="yes"><m>4</m>	</area>
							<area correct="no">	<m>y'</m>	</area>
								<m>\ =\ </m>
							<area correct="no">	<m>y^{-1}</m>	</area>
							<area correct="yes"><m>t</m>			</area>
								<m>\ +\ </m>
							<area correct="no">	<m>\sin(t)</m>	</area>
						</p>
					</sidebyside>
