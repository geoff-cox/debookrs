									\draw[gray, thick]	(\t,0.2) -- (\t,-0.2);	% t ticks
									\node[below, font=\small] at (\t,0) {\t};	% t labels	
								}
								\foreach \y in \yticks {
									\draw[gray]	(0.1,\y) -- (-0.1,\y);				% y ticks
									\node[left, font=\scriptsize] at (0.1,\y) {\y};	% y labels
